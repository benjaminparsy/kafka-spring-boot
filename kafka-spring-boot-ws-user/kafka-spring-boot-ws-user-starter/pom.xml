    <artifactId>kafka-spring-boot-ws-user-starter</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <name>KSB - WS User - Starter</name>
    <description>Technology watch project on kafka with Spring Boot - Webservice User - Starter module</description>

    <dependencies>
        <!-- Internal dependencies -->
        <dependency>
            <groupId>com.benjamin.parsy</groupId>
            <artifactId>kafka-spring-boot-ws-user-application</artifactId>
            <version>${project.version}</version>
        </dependency>
